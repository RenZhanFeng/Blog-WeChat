/**index.wxss**/

.indexContainer {
  margin: 10px 15px;
}

.blogItem {
  margin-bottom: 20px;
  padding: 20px;
  background: #fff;
  border-radius: 4px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, .05);
}

.blogTitle {
  color: #000;
  font-size: 20px;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.blogTitle:hover {
  color: #1e90ff;
}

.blogMeta {
  padding-top: 10px;
  padding-bottom: 10px;
  color: #ccc;
  font-size: 12px;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.blogMeta span {
  padding-right: 10px;
}

.list-cover img {
  width: 100%;
  display: block;
  margin: 8px auto;
  object-fit: cover;
}

.blogAbstract {
  font-size: 15px;
  color: #999;
  line-height: 20px;
}

.blogCover image {
  width: 100%;
  margin: 8px auto;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 80rpx;
  background: white;
}

.swiper {
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  top: 85rpx;
}

scroll-view {
  width: 100%;
  height: 93%;
}

.on {
  color: #1890ff;
  border-bottom: 5rpx solid #1890ff;
}