<!--index.wxml-->
<view class="index">
	<view class="indexContainer">
		<view class="blogItem" wx:for="{{blogList}}" wx:key="id" data-item ="{{item}}" bindtap="goDetails">
			<view class="blogContent">
				<view class="blogTitle">{{item.articleTitle}}</view>
				<view class="blogMeta">
					<span wx:if="{{item.category}}">
						<i class="iconfont icon-folder_icon"></i>
						{{item.category.name}}
					</span>
					<span wx:else>
						<i class="iconfont icon-folder_icon"></i>
						未分类
					</span>
					<span>
						<i class="iconfont icon-rili"></i>
						{{item.articleDate}}
					</span>
					<span>
						<i class="iconfont icon-ren"></i> 1230人
					</span>
				</view>
        <view class="blogCover">
         <img src="http://www.clownz.xyz:8220/api/file/97bb3c7c-3176-4707-bc95-b5edc4c23d5c-git.png" alt="cover"  />
        </view>
        <view class="blogAbstract">
        {{item.articleAbstract}}
        </view>
			</view>
			<view class="blogGo">
      </view>
		</view>
	</view>
</view>